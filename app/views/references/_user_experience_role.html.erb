<div class="experience-row">
  <dl>
    <dt>Role: </dt>
    <dd><%= @reference_builder_presenter.primary_activity(experience) %></dd>
    <%- if @reference_builder_presenter.has_secondary_activity?(experience) -%>
      <dt>Experience: </dt>
      <dd><%= @reference_builder_presenter.secondary_activity(experience) %></dd>
    <%- end -%>
    <dt>Years Experience: </dt>
    <dd><%= experience.years_experience %></dd>
    <dt>Company: </dt>
    <dd><%= experience.company %></dd>
  </dl>
</div>
