<h2>Basic Details</h2>
<hr/>
<p>Note about basic details and why you need to complete</p>
<%= form_for @details, html: { multipart: true } do |f| %>
  <h3>Personal</h3>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :postcode %>
    <%= f.text_field :postcode , class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email%>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone %>
    <%= f.phone_field :phone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :uk_citizen %>
    <%= f.check_box :uk_citizen, class: 'form-control' %>
    <%= f.label :eu_citizen %>
    <%= f.check_box :eu_citizen, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if @details.photo %>
      <%= image_tag @details.photo.url(:thumb) %>
    <% end %>
    <%= f.file_field :photo %>
  </div>

  <div class='form-button-container'>
    <%= f.submit 'Save',  class: 'btn btn-primary' %>
  </div>

<% end %>
