<div ng-controller='RoleController as ctrl'>
  <h2>Role Preferences</h2>
  <hr/>
  <p>Some content advising talent how to choose their 3 role options that we will provide</p>
  <div class="row">
    <div class="col-sm-4 role-option-container">
      <div class="role-option">Role 1</div>
    </div>
    <div class="col-sm-4 role-option-container">
      <div class="role-option">Role 2</div>
    </div>
    <div class="col-sm-4 role-option-container">
      <div class="role-option">Role 3</div>
    </div>
  </div>
  <%= form_for @role do |f| %>
  <div class="row">
    <div class="col-sm-6 role-type-selection-container">
      <div class="role-type-selection"><label><input type="checkbox" id="permanent" value="permanent"> Permanent</label></div>
       <div class="form-group">
        <%= f.label 'Minimum Annual Salary' %>
        <%= f.text_field :min_salary, class: 'form-control' %>
      </div>
      <div class="form-inline">
        <div class="form-group">
          <%= f.label 'Preferred Location' %></br>
          <%= f.text_field :postcode, class: 'form-control' %>
          <select class="form-control">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Current Notice Period' %>
          <select class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
          </select>
      </div>
      <div class="form-group">
        <%= f.label 'Willing to travel with work' %>
          <select class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
          </select>
      </div>
      <div class="form-group">
        <%= f.label 'Number of permanent roles in the last 5 years' %>
        <%= f.text_field :num_permanent_roles, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-6 role-type-selection-container">
      <div class="role-type-selection"><label><input type="checkbox" id="permanent" value="permanent"> Contract</label></div>
       <div class="form-group">
        <%= f.label 'Minimum Day Rate' %>
        <%= f.text_field :min_salary, class: 'form-control' %>
      </div>
      <div class="form-inline">
        <div class="form-group">
          <%= f.label 'Preferred Location' %></br>
          <%= f.text_field :postcode, class: 'form-control' %>
          <select class="form-control">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Current Notice Period' %>
          <select class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
          </select>
      </div>
      <div class="form-group">
        <%= f.label 'Availability date' %>
        <%= f.text_field :num_contracts, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label 'Willing to travel with work' %>
          <select class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
          </select>
      </div>
      <div class="form-group">
        <%= f.label 'Number of contracts in the last 5 years' %>
        <%= f.text_field :num_contracts, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label 'Number of contract extensions in the last 5 years' %>
        <%= f.text_field :num_extensions, class: 'form-control' %>
      </div>
    </div>
  </div>
  <% end %>
</div>