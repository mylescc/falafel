            <li>
              <%= link_to 'Basic Details', nav_personal_details_link(current_user), class: 'navigation-link' %>
              <span ng-show="profileValidationSummary.sectionValid('basic_details')" 
                class="glyphicon glyphicon-ok text-success navigation-indicator"></span>
              <span ng-hide="profileValidationSummary.sectionValid('basic_details')" 
                class="glyphicon glyphicon-remove text-danger navigation-indicator"></span>
              <div class="clearfix"></div>
              <ul ng-hide="profileValidationSummary.sectionValid('basic_details')">
                <li ng-repeat="error in profileValidationSummary.forSection('basic_details').errors" 
                  class='text-danger'>
                  {{error}}
                </li>
                <li ng-repeat="recommendation in profileValidationSummary.forSection('basic_details').recommendations" 
                  class='text-warning'>
                  {{recommendation}}
                </li>
              </ul>
            </li>
