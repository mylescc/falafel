<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render 'layouts/head' %>
  </head>
  <body ng-app="Fused4">
    <%= render 'layouts/navbar' %>
    <%= render 'layouts/notifications' %>

    <div id="talent-navigation" class="container">
      <div class="row">
        <div class="col-sm-3">
          <h1>Profile</h1>
          <hr/>
